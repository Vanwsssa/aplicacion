<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.aplicacion.ui.home.HomeFragment"
        android:label="TextFields"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.aplicacion.ui.dashboard.DashboardFragment"
        android:label="Botones"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.aplicacion.ui.notifications.NotificationsFragment"
        android:label="Elementos de selección"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_list"
        android:name="com.example.aplicacion.ui.list.ListFragment"
        android:label="Listas "
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/navigation_element"
        android:name="com.example.aplicacion.ui.element.ElementFragment"
        android:label="Elementos de información"
        tools:layout="@layout/fragment_element" />
</navigation>
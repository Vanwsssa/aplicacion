<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.element.ElementFragment">

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gracias por ver ðŸ’–"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/Dusty"/>

    <ImageView
        android:id="@+id/imageInfo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Imagen informativa"
        android:src="@drawable/ic_pingu_background" />

    <ProgressBar
        android:id="@+id/progressBarInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="50" />

</LinearLayout>